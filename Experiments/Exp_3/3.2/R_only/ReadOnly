#!/bin/bash

# Read ONLY, EXPERIMENT 3.1

clients=(1 8 16 22 28 32)
middleware_threads=(8 16 32 64)
try=(1 2 3)
time=60

threads=1  #memtier threads
MODE='R'
set=0
get=1
E=3
E_e=3.2
Ee=32

now=$(date +"%m_%d_%Y_%H:%M:%S")

Client1='10.0.0.7'
Client2='10.0.0.11'
Client3='10.0.0.5'
Middle1='10.0.0.6'
Middle2='10.0.0.4'
Server1='10.0.0.8'
Server2='10.0.0.10'
Server3='10.0.0.9'

user='foraslvms'


ssh ${user}@storesfm3ou7qrpiuisshpublicip1.westeurope.cloudapp.azure.com  "dstat -cdngyt > ./asl-fall18-project/Experiments/Exp_${E}/${E_e}/${MODE}_only/Client1/E${Ee}${MODE}OMemtier1dstat${now} " &

ssh ${user}@storesfm3ou7qrpiuisshpublicip2.westeurope.cloudapp.azure.com  "dstat -cdngyt > ./asl-fall18-project/Experiments/Exp_${E}/${E_e}/${MODE}_only/Client2/E${Ee}${MODE}OMemtier2dstat${now} " &

ssh ${user}@storesfm3ou7qrpiuisshpublicip3.westeurope.cloudapp.azure.com  "dstat -cdngyt > ./asl-fall18-project/Experiments/Exp_${E}/${E_e}/${MODE}_only/Client3/E${Ee}${MODE}OMemtier3dstat${now} " &

ssh ${user}@storesfm3ou7qrpiuisshpublicip4.westeurope.cloudapp.azure.com  "dstat -cdngyt > ./asl-fall18-project/Experiments/Exp_${E}/${E_e}/${MODE}_only/Middleware1/E${Ee}${MODE}OMemtier3dstat${now} " &

ssh ${user}@storesfm3ou7qrpiuisshpublicip5.westeurope.cloudapp.azure.com  "dstat -cdngyt > ./asl-fall18-project/Experiments/Exp_${E}/${E_e}/${MODE}_only/Middleware2/E${Ee}${MODE}OMemtier3dstat${now} " &



for m_threads in "${middleware_threads[@]}"; do
	for c in "${clients[@]}"; do	
		for p in "${try[@]}"; do

			echo "Running Experiment: E${Ee}${MODE}OMidd1_T${m_threads}_C${c}_try${p}.log"

			cmd="ssh ${user}@storesfm3ou7qrpiuisshpublicip4.westeurope.cloudapp.azure.com  pkill -2 java   "
			#echo $cmd
			$cmd

			cmd="ssh ${user}@storesfm3ou7qrpiuisshpublicip5.westeurope.cloudapp.azure.com  pkill -2 java   "
			#echo $cmd
			$cmd

			ssh ${user}@storesfm3ou7qrpiuisshpublicip4.westeurope.cloudapp.azure.com  " cd /home/${user}/asl-fall18-project/Middleware/src/; /usr/lib/jvm/java-8-openjdk-amd64/bin/java RunMW -l ${Middle1} -p 11212 -t ${m_threads} -s false -m ${Server1}:2222 &> /home/${user}/asl-fall18-project/Experiments/Exp_${E}/${E_e}/${MODE}_only/Middleware1/${m_threads}_threads/${now}E${Ee}${MODE}OMidd1_T${m_threads}_C${c}_try${p}.log " &
			

			ssh ${user}@storesfm3ou7qrpiuisshpublicip5.westeurope.cloudapp.azure.com  " cd /home/${user}/asl-fall18-project/Middleware/src/; /usr/lib/jvm/java-8-openjdk-amd64/bin/java RunMW -l ${Middle2} -p 11212 -t ${m_threads} -s false -m ${Server1}:2222 &> /home/${user}/asl-fall18-project/Experiments/Exp_${E}/${E_e}/${MODE}_only/Middleware2/${m_threads}_threads/${now}E${Ee}${MODE}OMidd2_T${m_threads}_C${c}_try${p}.log " &

			cmd="sleep 20"
			#echo $cmd
			$cmd

			ssh ${user}@storesfm3ou7qrpiuisshpublicip1.westeurope.cloudapp.azure.com  " /home/${user}/memtier_benchmark-master/memtier_bash.sh ${Middle1} ${time} ${c} $threads $set $get &> /home/${user}/asl-fall18-project/Experiments/Exp_${E}/${E_e}/${MODE}_only/Client1/${now}E${Ee}${MODE}OC1I1_T${m_threads}_C${c}_try${p}.log & /home/${user}/memtier_benchmark-master/memtier_bash.sh ${Middle2} ${time} ${c} $threads $set $get &> /home/${user}/asl-fall18-project/Experiments/Exp_${E}/${E_e}/${MODE}_only/Client1/${now}E${Ee}${MODE}OC1I2_T${m_threads}_C${c}_try${p}.log " &
			


			ssh ${user}@storesfm3ou7qrpiuisshpublicip2.westeurope.cloudapp.azure.com  " /home/${user}/memtier_benchmark-master/memtier_bash.sh ${Middle1} ${time} ${c} $threads $set $get &> /home/${user}/asl-fall18-project/Experiments/Exp_${E}/${E_e}/${MODE}_only/Client2/${now}E${Ee}${MODE}OC2I1_T${m_threads}_C${c}_try${p}.log &  /home/${user}/memtier_benchmark-master/memtier_bash.sh ${Middle2} ${time} ${c} $threads $set $get &> /home/${user}/asl-fall18-project/Experiments/Exp_${E}/${E_e}/${MODE}_only/Client2/${now}E${Ee}${MODE}OC2I2_T${m_threads}_C${c}_try${p}.log " &
			

			ssh ${user}@storesfm3ou7qrpiuisshpublicip3.westeurope.cloudapp.azure.com  " /home/${user}/memtier_benchmark-master/memtier_bash.sh ${Middle1} ${time} ${c} $threads $set $get &> /home/${user}/asl-fall18-project/Experiments/Exp_${E}/${E_e}/${MODE}_only/Client3/${now}E${Ee}${MODE}OC3I1_T${m_threads}_C${c}_try${p}.log &  /home/${user}/memtier_benchmark-master/memtier_bash.sh ${Middle2} ${time} ${c} $threads $set $get &> /home/${user}/asl-fall18-project/Experiments/Exp_${E}/${E_e}/${MODE}_only/Client3/${now}E${Ee}${MODE}OC3I2_T${m_threads}_C${c}_try${p}.log "
			
		

			cmd="sleep 5"
			#echo $cmd
			$cmd
	
			cmd="ssh ${user}@storesfm3ou7qrpiuisshpublicip4.westeurope.cloudapp.azure.com  pkill -2 java   "
			#echo $cmd
			$cmd

			cmd="ssh ${user}@storesfm3ou7qrpiuisshpublicip5.westeurope.cloudapp.azure.com  pkill -2 java   "
			#echo $cmd
			$cmd


			cmd="ssh ${user}@storesfm3ou7qrpiuisshpublicip1.westeurope.cloudapp.azure.com  pkill -2 memtier   "
			#echo $cmd
			$cmd

			cmd="ssh ${user}@storesfm3ou7qrpiuisshpublicip2.westeurope.cloudapp.azure.com  pkill -2 memtier   "
			#echo $cmd
			$cmd

			cmd="ssh ${user}@storesfm3ou7qrpiuisshpublicip3.westeurope.cloudapp.azure.com  pkill -2 memtier   "
			#echo $cmd
			$cmd

			cmd="sleep 5"
			#echo $cmd
			$cmd
	

		done
	done
done
cmd="ssh ${user}@storesfm3ou7qrpiuisshpublicip1.westeurope.cloudapp.azure.com pkill -2 dstat  "
echo $cmd
$cmd

cmd="ssh ${user}@storesfm3ou7qrpiuisshpublicip2.westeurope.cloudapp.azure.com pkill -2 dstat  "
echo $cmd
$cmd	

cmd="ssh ${user}@storesfm3ou7qrpiuisshpublicip3.westeurope.cloudapp.azure.com pkill -2 dstat  "
echo $cmd
$cmd

cmd="ssh ${user}@storesfm3ou7qrpiuisshpublicip4.westeurope.cloudapp.azure.com pkill -2 dstat  "
echo $cmd
$cmd

cmd="ssh ${user}@storesfm3ou7qrpiuisshpublicip5.westeurope.cloudapp.azure.com pkill -2 dstat  "
echo $cmd
$cmd
